                                WidthRequest="59" HeightRequest="30" OnColor="lightGray" ThumbColor="#ffffff"/>
                    </Grid>
                    </SwipeView>
                </DataTemplate>
            </BindableLayout.ItemTemplate>-->
        </StackLayout>
    </ScrollView>
</ContentView>